package view;

import java.io.IOException;

import com.google.gson.Gson;

import processing.core.PApplet;

public class Main extends PApplet implements onMessageListener{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		PApplet.main("view.Main");
	}
	private int x = 0;
	private int y = 0;
	
	private TCPSingleton tcp;
	
	
	public void settings() {
		size(1200,700);
	}
	
	public void setup() {
		tcp = TCPSingleton.getInstance();
		tcp.setObserver(this);
		tcp.start();
	}
	
	public void draw() {
		background(0);
		/*for(int i = 0; i < 2; i++ ) {
			Session sesion = tcp.getSesiones().get(i);
		}*/
		Session sesion = tcp.getSesiones();
		fill(0,0,255);
		x = sesion.getCoordenada().getX();
		y = sesion.getCoordenada().getY();
		
		ellipse(x,y , 100, 100);
	}

	public void onMessage(Session s, String msg) {
		System.out.println("Sesion:"+s.getID()+","+msg);
		Gson gson = new Gson();
		Coordenada coorRecibida = gson.fromJson(msg, Coordenada.class);
		s.setCoordenada(coorRecibida);
	}

}
